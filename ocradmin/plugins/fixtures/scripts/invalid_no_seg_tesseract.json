{
    "__meta": {
        "name": "TesseractBasic",
        "description": "Basic Tesseract script"
    },
    "filein1": {
        "params": [
            [
                "path", 
                "etc/simple.png"
            ]
        ], 
        "type": "Ocropus::FileIn", 
        "inputs": []
    }, 
    "DeskewPageByRAST1": {
        "params": [
            [
                "max_n", 
                10000
            ]
        ], 
        "type": "Ocropus::DeskewPageByRAST", 
        "inputs": [
            "BinarizeBySauvola1"
        ]
    }, 
    "RmHalftone1": {
        "params": [
            [
                "factor", 
                3
            ], 
            [
                "threshold", 
                4
            ]
        ], 
        "type": "Ocropus::RmHalftone", 
        "inputs": [
            "DeskewPageByRAST1"
        ]
    }, 
    "BinarizeBySauvola1": {
        "params": [
            [
                "k", 
                0.29999999999999999
            ], 
            [
                "w", 
                40
            ]
        ], 
        "type": "Ocropus::BinarizeBySauvola", 
        "inputs": [
            "filein1"
        ]
    }, 
    "TesseractRecognizer1": {
        "params": [
            [
                "language_model", 
                "Tesseract Default Lang"
            ]
        ], 
        "type": "Tesseract::TesseractRecognizer", 
        "inputs": [
            "RmHalftone1", 
            "SegmentPageBy1CP1"
        ]
    }
}

